<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.water.dao.usr.UsrDao" >
	<!-- 查询列 -->
	<sql id="QUERY_COLUMN">
		<![CDATA[
		 	 id                AS id,
		   usr_name          AS usrName,
		   usr_code          AS usrCode,
		   usr_station_code  AS usrStationCode,
		   usr_openid        AS usrOpenid,
		   follow_time       AS followTime,
		   creation_time     AS creationTime,
		   modification_time AS modificationTime,
		   valid             AS valid
		]]>
	</sql>
	
	<sql id="TABLE_NAME"><![CDATA[t_usr]]></sql>
	<!-- 查询表 -->
	<sql id="FROM_TABLE">
		<![CDATA[FROM]]>
		<include refid="TABLE_NAME"/>
	</sql>
	<!-- 全部条件 -->
	<sql id="WHERE">
		<where>
			<![CDATA[AND valid = 1]]>
			<if test="id != null and id != ''"><![CDATA[AND id = #{id}]]></if>
			<if test="usrName != null and usrName != ''"><![CDATA[AND usr_name = #{usrName}]]></if>
			<if test="usrCode != null and usrCode != ''"><![CDATA[AND usr_code = #{usrCode}]]></if>
			<if test="usrStationCode != null and usrStationCode != ''"><![CDATA[AND usr_station_code = #{usrStationCode}]]></if>
			<if test="usrOpenid != null and usrOpenid != ''"><![CDATA[AND usr_openid = #{usrOpenid}]]></if>
			<if test="follow_time != null and follow_time != ''"><![CDATA[AND date(follow_time) = date(#{followTime})]]></if>
			<if test="creationTime != null and creationTime != ''"><![CDATA[AND date(creation_time) = date(#{creationTime})]]></if>
			<if test="modificationTime != null and modificationTime != ''"><![CDATA[AND date(modification_time) = date(#{modificationTime})]]></if>
		</where>
	</sql>
	<!-- 更新列字段,只要不为NULL则更新,除开主键列 -->
	<sql id="SET">
		<set>
			<![CDATA[modification_time = now(),]]>
			<if test="usrName != null and usrName != ''"><![CDATA[ usr_name = #{usrName}]]></if>
			<if test="usrCode != null and usrCode != ''"><![CDATA[ usr_code = #{usrCode}]]></if>
			<if test="usrOpenid != null and usrOpenid != ''"><![CDATA[ usr_openid = #{usrOpenid}]]></if>
			<if test="follow_time != null and follow_time != ''"><![CDATA[ follow_time = #{followTime}]]></if>
			<if test="valid == 1 or valid==0"><![CDATA[valid = #{valid}]]></if>
		</set>
	</sql>
	<!-- 基础逻辑SQL -->
	<!-- 保存数据 -->
	<insert id="saveEntry" parameterType="java.lang.reflect.Array">
		<![CDATA[INSERT INTO]]>
		<include refid="TABLE_NAME"/>
		<![CDATA[(usr_name,usr_code,usr_openid) VALUES]]>
		<foreach collection="array" item="item" index="index" separator="," >
			<![CDATA[(#{item.usrName},#{item.usrCode},#{item.usrOpenid})]]>
		</foreach>
	</insert>
	<!-- 通过主键删除数据 -->
	<delete id="deleteByKey" parameterType="java.lang.reflect.Array">
		<![CDATA[DELETE]]>
		<include refid="FROM_TABLE"/>
		<![CDATA[WHERE id IN]]>
		<foreach collection="array" item="id" open="(" separator="," close=")">
			<![CDATA[#{id}]]>
		</foreach>
	</delete>
	<!-- 通过条件删除数据 -->
	<delete id="deleteByCondition" parameterType="Usr">
		<![CDATA[DELETE]]>
		<include refid="FROM_TABLE"/>
		<include refid="WHERE"/>
	</delete>
	<!-- 通过主键修改数据 -->
	<update id="modifyByKey" parameterType="Usr">
		<![CDATA[UPDATE]]>
		<include refid="TABLE_NAME"/>
		<include refid="SET"/>
		<![CDATA[WHERE valid=1 AND id=#{id}]]>
	</update>
	<!-- 按主键 查询对象 -->
	<select id="queryEntryListByKey" parameterType="java.lang.reflect.Array" resultType="Usr">
		<![CDATA[SELECT]]>
		<include refid="QUERY_COLUMN"/>
		<include refid="FROM_TABLE"/>
		<![CDATA[WHERE valid=1 and id IN ]]>
		<foreach collection="array" item="id" open="(" separator="," close=")">
			<![CDATA[#{id}]]>
		</foreach>
	</select>
	<!-- 按条件 查询对象 -->
	<select id="queryEntryListByCondition" parameterType="Usr" resultType="Usr">
		<![CDATA[SELECT]]>
		<include refid="QUERY_COLUMN"/>
		<include refid="FROM_TABLE"/>
		<include refid="WHERE"/>
	</select>
	<!-- 按条件 查询对象个数 -->
	<select id="queryEntryListCntByCondition" parameterType="Usr" resultType="int">
		<![CDATA[SELECT]]>
		<include refid="QUERY_COLUMN"/>
		<include refid="FROM_TABLE"/>
		<include refid="WHERE"/>
	</select>
	<!-- 通过主键数组,逻辑删除数据 -->
	<update id="logicDelByKey" parameterType="java.lang.reflect.Array" >
		<![CDATA[UPDATE]]>
		<include refid="TABLE_NAME"/>
		<![CDATA[SET valid=0,modification_time=NOW()]]>
		<![CDATA[WHERE valid=1 AND id IN]]>
		<foreach collection="array" item="id" open="(" separator="," close=")">
			<![CDATA[#{id}]]>
		</foreach>
	</update>
	<!-- 通过条件,逻辑删除数据 -->
	<update id="logicDelByCondition" parameterType="Usr" >
		<![CDATA[UPDATE]]>
		<include refid="TABLE_NAME"/>
		<![CDATA[SET valid=0,modification_time=NOW()]]>
		<include refid="WHERE"/>
	</update>
	<!-- 其他业务逻辑SQL -->
	
</mapper>
<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.dmall.homvee.dao.vender.VenderDao" >
	<!-- 查询列 -->
	<sql id="QUERY_COLUMN">
		<![CDATA[
		id AS               id,
		vender_name AS venderName,
		yn AS yn,
		create_time AS createTime,
		modify_time AS modifyTime
		]]>
	</sql>
	
	<sql id="TABLE_NAME"><![CDATA[t_vender]]></sql>
	<!-- 查询表 -->
	<sql id="FROM_TABLE">
		<![CDATA[FROM]]>
		<include refid="TABLE_NAME"/>
	</sql>
	<!-- 全部条件 -->
	<sql id="WHERE">
		<where>
			<![CDATA[AND yn != -1]]>
			<if test="id != null and id != ''"><![CDATA[AND id = #{id}]]></if>
			<if test="venderName != null and venderName != ''"><![CDATA[AND vender_name = #{venderName}]]></if>
			<if test="createTime != null and createTime != ''"><![CDATA[AND create_time = #{createTime}]]></if>
			<if test="modifyTime != null and modifyTime != ''"><![CDATA[AND modify_time = #{modifyTime}]]></if>
		</where>
	</sql>
	<!-- 更新列字段,只要不为NULL则更新,除开主键列 -->
	<sql id="SET">
		<set>
			<![CDATA[modify_time = now(),]]>
			<if test="venderName != null and venderName !=''"><![CDATA[vender_name = #{venderName},]]></if>
			<if test="yn == 1 or yn==-1"><![CDATA[yn = #{yn}]]></if>
		</set>
	</sql>
	<!-- 基础逻辑SQL -->
	<!-- 保存数据 -->
	<insert id="saveEntry" parameterType="java.lang.reflect.Array">
		<![CDATA[INSERT INTO]]>
		<include refid="TABLE_NAME"/>
		<![CDATA[(`vender_name`) VALUES]]>
		<foreach collection="array" item="item" index="index" separator="," >
			<![CDATA[(#{item.venderName})]]>
		</foreach>
	</insert>
	<!-- 通过主键删除数据 -->
	<delete id="deleteByKey" parameterType="java.lang.reflect.Array">
		<![CDATA[DELETE]]> 
		<include refid="FROM_TABLE"/>
		<![CDATA[WHERE id IN]]>
		<foreach collection="array" item="id" open="(" separator="," close=")">
			<![CDATA[#{id}]]>
		</foreach>
	</delete>
	<!-- 通过条件删除数据 -->
	<delete id="deleteByCondition" parameterType="Vender">
		<![CDATA[DELETE]]> 
		<include refid="FROM_TABLE"/>
		<include refid="WHERE"/>
	</delete>
	<!-- 通过主键修改数据 -->
	<update id="modifyByKey" parameterType="Vender">
		<![CDATA[UPDATE]]> 
		<include refid="TABLE_NAME"/>
		<include refid="SET"/>
		<![CDATA[WHERE yn=1 AND id=#{id}]]> 
	</update>
	<!-- 按主键 查询对象 -->
	<select id="queryEntryListByKey" parameterType="java.lang.reflect.Array" resultType="Vender">
		<![CDATA[SELECT]]>
		<include refid="QUERY_COLUMN"/>
		<include refid="FROM_TABLE"/>
		<![CDATA[WHERE yn=1 and id IN ]]>
		<foreach collection="array" item="id" open="(" separator="," close=")">
			<![CDATA[#{id}]]>
		</foreach>
	</select>
	<!-- 按条件 查询对象 -->
	<select id="queryEntryListByCondition" parameterType="Vender" resultType="Vender">
		<![CDATA[SELECT]]>
		<include refid="QUERY_COLUMN"/>
		<include refid="FROM_TABLE"/>
		<include refid="WHERE"/>
	</select>
	<!-- 按条件 查询对象个数 -->
	<select id="queryEntryListCntByCondition" parameterType="Vender" resultType="int">
		<![CDATA[SELECT]]>
		<include refid="QUERY_COLUMN"/>
		<include refid="FROM_TABLE"/>
		<include refid="WHERE"/>
	</select>
	<!-- 通过主键数组,逻辑删除数据 -->
	<update id="logicDelByKey" parameterType="java.lang.reflect.Array" >
		<![CDATA[UPDATE]]>
		<include refid="TABLE_NAME"/>
		<![CDATA[SET yn=-1,modify_time=NOW()]]>
		<![CDATA[WHERE yn=1 AND id IN]]>
		<foreach collection="array" item="id" open="(" separator="," close=")">
			<![CDATA[#{id}]]>
		</foreach>
	</update>
	<!-- 通过条件,逻辑删除数据 -->
	<update id="logicDelByCondition" parameterType="Vender" >
		<![CDATA[UPDATE]]>
		<include refid="TABLE_NAME"/>
		<![CDATA[SET yn=-1,modify_time=NOW()]]>
		<include refid="WHERE"/>
	</update>
	<!-- 其他业务逻辑SQL -->
	
</mapper>
<?xml version="1.0" encoding="UTF-8"?>
<configuration>
	<!-- full log output to file  -->
	<appender name="LOG_COMPLETEPAY_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>${dynamic.log.path}/homvee.log</file>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<fileNamePattern>${dynamic.log.path}/homvee-%d{yyyy-MM-dd}.log</fileNamePattern>
			<maxHistory>7</maxHistory>
		</rollingPolicy>
		<encoder>
			<pattern>[%p] %d{yyyy-MM-dd HH:mm:ss.SSS} [%t][%c]%C:%L - %m %n
			</pattern>
		</encoder>
	</appender>
	<!-- log output to console  -->
	<appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
		</encoder>
	</appender>
	
	<!-- <logger name="com.dmall.homvee.dao" level="${log.level}">
		<appender-ref ref="LOG_COMPLETEPAY_FILE" />
		<appender-ref ref="CONSOLE" />
	</logger> -->
	<logger name="com.dmall.homvee.service" level="${log.level}">
		<appender-ref ref="LOG_COMPLETEPAY_FILE" />
		<appender-ref ref="CONSOLE" />
	</logger>
	<!-- 
	<logger name="com.dmall.homvee.web" level="${log.level}">
		<appender-ref ref="LOG_COMPLETEPAY_FILE" />
		<appender-ref ref="CONSOLE" />
	</logger> 
	<logger name="java.sql" level="${log.level}" additivity="false">
		<appender-ref ref="CONSOLE" />
	</logger> 
	-->
	<logger name="net" level="${log.level}" additivity="false">
		<appender-ref ref="CONSOLE" />
	</logger>
	<logger name="org" level="${log.level}" additivity="false">
		<appender-ref ref="CONSOLE" />
	</logger>

	<root level="${log.level}">
		<appender-ref ref="LOG_COMPLETEPAY_FILE" />
		<appender-ref ref="CONSOLE" />
	</root>
</configuration>

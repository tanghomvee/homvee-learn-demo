<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.homvee.dao.RecordDao" >
	<!-- 查询列 -->
	<sql id="QUERY_COLUMN">
		<![CDATA[
		usr_id AS usrId,
    	place_id AS placeId,
    	upload_time AS uploadTime,
		img_uri AS imgUri,
		id AS               id,
		yn AS yn,
		create_time AS createTime,
		modify_time AS modifyTime
		]]>
	</sql>
	
	<sql id="TABLE_NAME"><![CDATA[t_record]]></sql>
	<!-- 查询表 -->
	<sql id="FROM_TABLE">
		<![CDATA[FROM]]>
		<include refid="TABLE_NAME"/>
	</sql>
	<!-- 智能排序与分页 -->
	<sql id="ORDER_LIMIT">
		<if test="orderFields != null and orderFields.size() > 0">
			<![CDATA[ ORDER BY ]]>
			<foreach collection="orderFields" index="orderField"  item="orderType" separator=",">
			<![CDATA[ #{orderField} #{orderType} ]]>
			</foreach>
		</if>
		<if test="startIndex != null and startIndex &gt;= 0 and pageSize != null and pageSize &gt; 0"><![CDATA[LIMIT #{startIndex},#{pageSize}]]></if>
	</sql>
	<!-- 全部条件 -->
	<sql id="WHERE">
		<where>
			<![CDATA[AND yn != -1]]>
			<if test="id != null and id != ''"><![CDATA[ AND id = #{id}]]></if>
			<if test="imgUri != null and imgUri !=''"><![CDATA[ AND img_uri LIKE CONCAT('%', #{imgUri}, '%')]]></if>
			<if test="usrId != null and usrId > 0"><![CDATA[ AND usr_id = #{usrId}]]></if>
			<if test="placeId != null and placeId > 0 "><![CDATA[ AND place_id = #{placeId}]]></if>
			<if test="uploadTime != null and uploadTime != ''"><![CDATA[ AND upload_time = #{uploadTime}]]></if>
			<if test="createTime != null and createTime != ''"><![CDATA[ AND create_time = #{createTime}]]></if>
			<if test="modifyTime != null and modifyTime != ''"><![CDATA[ AND modify_time = #{modifyTime}]]></if>
		</where>
	</sql>
	<!-- 更新列字段,只要不为NULL则更新,除开主键列 -->
	<sql id="SET">
		<set>
			<![CDATA[modify_time = now()]]>
			<if test="imgUri != null and imgUri !=''"><![CDATA[ ,img_uri= #{imgUri})]]></if>
			<if test="usrId != null and usrId > 0"><![CDATA[, usr_id = #{usrId}]]></if>
			<if test="placeId != null and placeId > 0 "><![CDATA[ , place_id = #{placeId}]]></if>
			<if test="uploadTime != null and uploadTime != ''"><![CDATA[ , upload_time = #{uploadTime}]]></if>
			<if test="yn == 1 or yn==-1"><![CDATA[,yn = #{yn}]]></if>
		</set>
	</sql>
	<!-- 基础逻辑SQL -->
	<!-- 保存数据 -->
	<insert id="saveEntry" parameterType="Record" useGeneratedKeys="true" keyProperty="id">
		<![CDATA[INSERT INTO]]>
		<include refid="TABLE_NAME"/>
		<![CDATA[(`img_uri`,`usr_id`,`place_id`) VALUES(#{imgUri},#{usrId},#{placeId})]]>
	</insert>
	<!-- 通过主键删除数据 -->
	<delete id="deleteByKey" parameterType="java.lang.reflect.Array">
		<![CDATA[DELETE]]> 
		<include refid="FROM_TABLE"/>
		<![CDATA[WHERE id IN]]>
		<foreach collection="array" item="id" open="(" separator="," close=")">
			<![CDATA[#{id}]]>
		</foreach>
	</delete>
	<!-- 通过条件删除数据 -->
	<delete id="deleteByCondition" parameterType="Record">
		<![CDATA[DELETE]]> 
		<include refid="FROM_TABLE"/>
		<include refid="WHERE"/>
	</delete>
	<!-- 通过主键修改数据 -->
	<update id="modifyByKey" parameterType="Record">
		<![CDATA[UPDATE]]> 
		<include refid="TABLE_NAME"/>
		<include refid="SET"/>
		<![CDATA[WHERE yn=1 AND id=#{id}]]> 
	</update>
	<!-- 按主键 查询对象 -->
	<select id="queryEntryListByKey" parameterType="java.lang.reflect.Array" resultType="Record">
		<![CDATA[SELECT]]>
		<include refid="QUERY_COLUMN"/>
		<include refid="FROM_TABLE"/>
		<![CDATA[WHERE yn=1 and id IN ]]>
		<foreach collection="array" item="id" open="(" separator="," close=")">
			<![CDATA[#{id}]]>
		</foreach>
	</select>
	<!-- 按条件 查询对象 -->
	<select id="queryEntryListByCondition" parameterType="Record" resultType="Record">
		<![CDATA[SELECT]]>
		<include refid="QUERY_COLUMN"/>
		<include refid="FROM_TABLE"/>
		<include refid="WHERE"/>
		<include refid="ORDER_LIMIT"/>
	</select>
	<!-- 按条件 查询对象个数 -->
	<select id="queryEntryListCntByCondition" parameterType="Record" resultType="int">
		<![CDATA[SELECT COUNT(1) AS cnt ]]>
		<include refid="FROM_TABLE"/>
		<include refid="WHERE"/>
	</select>
	<!-- 通过主键数组,逻辑删除数据 -->
	<update id="logicDelByKey" parameterType="java.lang.reflect.Array" >
		<![CDATA[UPDATE]]>
		<include refid="TABLE_NAME"/>
		<![CDATA[SET yn=-1,modify_time=NOW()]]>
		<![CDATA[WHERE yn=1 AND id IN]]>
		<foreach collection="array" item="id" open="(" separator="," close=")">
			<![CDATA[#{id}]]>
		</foreach>
	</update>
	<!-- 通过条件,逻辑删除数据 -->
	<update id="logicDelByCondition" parameterType="Record" >
		<![CDATA[UPDATE]]>
		<include refid="TABLE_NAME"/>
		<![CDATA[SET yn=-1,modify_time=NOW()]]>
		<include refid="WHERE"/>
	</update>
	<!-- 其他业务逻辑SQL -->
	
</mapper>